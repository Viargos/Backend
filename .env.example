# Environment Configuration Example
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Application
NODE_ENV=development
PORT=3000
TZ=Asia/Mumbai
LOG_DIR=logs

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3001

# JWT Configuration
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-min-256-bits-change-this-in-production
EXPIRES_IN=1h
ACCESS_TOKEN_VALIDITY_SEC=10d
REFRESH_TOKEN_VALIDITY_SEC=86400
TOKEN_ISSUER=viargos-api
TOKEN_AUDIENCE=viargos-users

# Database Configuration (PostgreSQL - Neon)
DB_NAME=your_database_name
DB_HOST=your-database-host.neon.tech
DB_PORT=5432
DB_USER=your_database_user
DB_PWD=your_database_password
DB_TYPE=postgres
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# OTP Configuration
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
OTP_ENCRYPTION_KEY=your-32-character-encryption-key-change-this

# Email Configuration (Gmail SMTP)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-specific-password
EMAIL_USER=your-email@gmail.com

# AWS S3 Configuration
VIARGOS_AWS_ACCESS_KEY_ID=your-aws-access-key-id
VIARGOS_AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-2
AWS_S3_BUCKET_NAME=your-s3-bucket-name

# Redis (Optional - for caching)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Monitoring & Logging (Optional)
# SENTRY_DSN=
# NEW_RELIC_LICENSE_KEY=

# Rate Limiting (Optional)
# THROTTLE_TTL=60
# THROTTLE_LIMIT=10
